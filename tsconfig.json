{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noEmit": true,
    "pretty": true,
    "sourceMap": true,

    "outDir": "lib",
    "rootDir": "src",

    "lib": ["esnext"],

    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": false
  },
  "include": ["src/**/*"]
}
