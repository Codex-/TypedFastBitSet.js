{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,

    "lib": ["esnext"],

    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "stripInternal": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.*"]
}
